{
    "compileOnSave": true,
    "compilerOptions": {
		"allowJs": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types"
		]
    },
	"include": [
		"**/*.spec.ts"
	]
}
